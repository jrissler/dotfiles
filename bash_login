# A substitute for cd that gives it history.
function cd {
  pushd . -n > /dev/null
  pushd $1 > /dev/null
  popd -n > /dev/null
}
# Use this to go back through the 'cd' history
alias b='popd > /dev/null'

# Toggle between two directories
alias swap="cd $OLDPWD"

